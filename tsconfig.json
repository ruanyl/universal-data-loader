{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "jsx": "react",
    "target": "es5",
    "noUnusedLocals": true,
    "lib": ["ES2015","ES2016", "ESNEXT", "DOM", "ES5", "ScriptHost", "ES2015.Promise"]
  },
  "include": [
    "src/**/*"
  ]
}
